BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_up_down(1)
            Button:
                text: 'Down'
                on_press: app.handle_up_down(-1)

    Button:
        text: 'Convert m to km'
        on_press: app.handle_convert()
    Label:
        id: output_number
        font_size: 48
        color: (1, 1, 0, 1)
